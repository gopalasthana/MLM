# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/mlm_platform

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRE=7d

# Admin Configuration
ADMIN_EMAIL=admin@mlmplatform.com
ADMIN_PASSWORD=admin123456

# Binance API (Public - no keys needed for price data)
BINANCE_API_URL=https://api.binance.com/api/v3

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# CoinPayments API (Optional)
COINPAYMENTS_PUBLIC_KEY=your_coinpayments_public_key
COINPAYMENTS_PRIVATE_KEY=your_coinpayments_private_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
